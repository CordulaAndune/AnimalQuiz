<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionTextStyle">
        <!-- TextStyle of question and start screen -->
        <item name="android:textSize">@dimen/questionTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/inner_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Buttons">
        <!-- Button styling -->
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">@dimen/answerTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="EditTextStyle">
        <!-- EditText styling -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/outer_padding</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="Answers" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/outer_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/answerTextSize</item>
    </style>

</resources>
